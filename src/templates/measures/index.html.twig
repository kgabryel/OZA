{% extends "content.html.twig" %}
{% block content %}
    <div class="row justify-content-md-center">
        <div class="col-md-12 col-lg-9 col-xl-7">
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('measures.main.show') }}">
                        <button class="btn btn-info btn-block my-4 waves-effect waves-light" type="button">
                            <span class="plus-icon"></span>
                            Dodaj główną jednostkę
                        </button>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('measures.sub.show') }}">
                        <button class="btn btn-info btn-block my-4 waves-effect waves-light" type="submit">
                            <span class="plus-icon"></span>
                            Dodaj podrzędną jednostkę
                        </button>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-9 col-xl-7">
            <div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center card-head">
                <div></div>
                <div class="white-text mx-3 tab-header">Jednostki miar</div>
                <div></div>
            </div>
            <div class="card card-cascade narrower card-cont">
                <form method="GET" action="{{ path('measures.index') }}">
                    <div class="row">
                        <div class="col-10 offset-1 col-sm-5 offset-sm-1">
                            {{ form_widget(findForm.name, {checked: false}) }}
                        </div>
                        <div class="col-10 offset-1 offset-sm-0 col-sm-5">
                            {{ form_widget(findForm.shortcut, {checked: false}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10 offset-1 col-sm-5 offset-sm-1 multi-select-col">
                            {{ form_widget(findForm.types, {checked: false}) }}
                        </div>
                        <div class="col-10 offset-1 offset-sm-0 col-sm-5 multi-select-col">
                            {{ form_widget(findForm.measures, {checked: false}) }}
                        </div>
                    </div>

                    <div class="row justify-content-center ">
                        <div class="col-10 col-sm-5 col-lg-3">
                            <button class="btn btn-info btn-block my-4 waves-effect waves-light" type="submit">
                                <span class="search-icon"></span>
                                Szukaj
                            </button>
                        </div>
                        <div class="col-lg-4 d-none d-lg-block">
                            {{ paginate(paginator) }}
                        </div>
                        <div class="col-10 col-sm-5 col-lg-3">
                            <button class="btn btn-default btn-block my-4 waves-effect waves-light clear-button" type="button">
                                <span class="clear-icon"></span>
                                Czyść
                            </button>
                        </div>
                        <div class="col-10 d-lg-none">
                            {{ paginate(paginator) }}
                        </div>
                    </div>
                </form>
                {% include 'measures/table.html.twig' %}
            </div>
        </div>
    </div>
    {% include 'modals/measure.html.twig' %}
    {% include 'modals/delete.html.twig' %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <link rel="stylesheet" href="{{ asset('css/measures/measures.css') }}"/>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script type="module" src="{{ asset('js/measures/index.js') }}"></script>
{% endblock %}