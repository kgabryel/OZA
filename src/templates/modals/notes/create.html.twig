<div class="modal fade" id="createModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dodaj notatkÄ™</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="{{ path('home.create') }}">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_widget(createForm.content, {checked: checked}) }}
                        </div>
                    </div>
                    <input type="hidden" name="{{ createForm._token.vars.full_name }}"
                           value="{{ createForm._token.vars.value }}"/>
                    <button class="btn btn-info btn-block my-4" type="submit">
                        <span class="save-icon"></span>
                        Dodaj
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>